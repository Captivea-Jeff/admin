<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_kanban_view_maqabim" model="ir.ui.view">
            <field name="name">product.template.common.form.maqabim</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='purchase']" position="attributes">
                    <attribute name="groups">stock.group_stock_manager</attribute>
                </xpath>
                <xpath expr="//field[@name='list_price']" position="attributes">
                    <attribute name="groups">stock.group_stock_manager</attribute>
                </xpath>
                <xpath expr="//label[@for='standard_price']" position="attributes">
                    <attribute name="groups">stock.group_stock_manager</attribute>
                </xpath>
                <xpath expr="//div[@name='standard_price_uom']" position="attributes">
                    <attribute name="groups">stock.group_stock_manager</attribute>
                </xpath>
            </field>
        </record>

        <record id="product_template_form_view_maqabim" model="ir.ui.view">
            <field name="name">Product.template.product.kanban.maqabim</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_kanban_details')]/ul/li" position="attributes">
                    <attribute name="groups">stock.group_stock_manager</attribute>
                </xpath>
            </field>
        </record>

        <record id="product_product_tree_view_maqabim" model="ir.ui.view">
            <field name="name">product.product.tree.maqabim</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lst_price']" position="attributes">
                    <attribute name="groups">stock.group_stock_manager</attribute>
                </xpath>
            </field>
        </record>

        <record id="product_kanban_view_maqabim" model="ir.ui.view">
            <field name="name">product.product.kanban.maqabim</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_kanban_details')]/ul/li" position="attributes">
                    <attribute name="groups">stock.group_stock_manager</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
