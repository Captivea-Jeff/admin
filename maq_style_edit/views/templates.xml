<odoo>
    <data>
        <template id="x_maq_style_edits" inherit_id="portal.frontend_layout">
            <xpath expr="//t[@t-call='web.layout']/t[@t-set='head_website']/t[last()]" position="after">
                <t t-if="website_id == 1">
                    <style>
                        div#footer {background-color: white !important;}
                        div#footer *, li#my_cart *{color:black !important;}
                        
                        a > span.fa-shopping-cart{color:black !important}
                        div#products_grid_before > ul > li.active > a {background-color:black !important; color: white !important}
                        #products_grid .pagination > .active > a {border-bottom-color:black !important; color: black !important}

                        
                        #products_grid_before{background-color: white !important; color: black !important}
                        #products_grid_before * {background-color: white !important; color: black !important}
                        .input-group {border-bottom-color: black !important;}
                        ::placeholder {color: black !important;}

                        .btn-primary {border-color: black !important; color: black !important}
                    </style>
                </t>
            </xpath>
        </template>
    </data>
</odoo>