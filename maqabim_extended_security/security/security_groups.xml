<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">        
        <record id="group_hide_vendors" model="res.groups">
            <field name="category_id" ref="base.module_category_extra"/>
            <field name="name">Hide Vendors</field>
        </record>
        <record id="group_restrict_product_creation" model="res.groups">
            <field name="category_id" ref="base.module_category_extra"/>
            <field name="name">Restrict Product Creation</field>
        </record>
        <record id="group_restrict_pos_closing" model="res.groups">
            <field name="category_id" ref="base.module_category_point_of_sale"/>
            <field name="name">Restricted pos user</field>
            <field name="implied_ids" eval="[(4, ref('point_of_sale.group_pos_user'))]"/>
        </record>
        <record id="group_purchase_restricted_user" model="res.groups">
            <field name="category_id" ref="base.module_category_purchase_management"/>
            <field name="name">Restricted User</field>
            <field name="view_access" eval="[(4, ref('purchase.view_product_template_purchase_buttons_from')),
                                            (4, ref('purchase.purchase_partner_kanban_view')),
                                            (4, ref('purchase.res_partner_view_purchase_buttons'))]"/>
            <field name="menu_access" eval="[(4, ref('purchase.menu_purchase_root'))]"/>
        </record>
        <record id="pos_config_user_rule" model="ir.rule">
            <field name="name">User specific Point Of Sale</field>
            <field name="model_id" ref="point_of_sale.model_pos_config"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('id', 'in', user.pos_ids.ids)]</field>
        </record>
        <record id="pos_session_user_rule" model="ir.rule">
            <field name="name">User specific Point Of Sale sessions</field>
            <field name="model_id" ref="point_of_sale.model_pos_session"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('config_id', 'in', user.pos_ids.ids)]</field>
        </record>
        <record id="stock_warehouse_user_rule" model="ir.rule">
            <field name="name">User specific warehouses</field>
            <field name="model_id" ref="stock.model_stock_warehouse"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('id', 'in', user.warehouse_ids.ids)]</field>
        </record>
        <record id="stock_picking_type_user_rule" model="ir.rule">
            <field name="name">User specific picking operations</field>
            <field name="model_id" ref="stock.model_stock_picking_type"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('warehouse_id', 'in', user.warehouse_ids.ids)]</field>
        </record>
        <record id="stock_picking_user_rule" model="ir.rule">
            <field name="name">User specific pickings</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('picking_type_id.warehouse_id', 'in', user.warehouse_ids.ids)]</field>
        </record>
        <record id="purchase_order_user_warehouse_rule" model="ir.rule">
            <field name="name">Warehouse specific Purchase Orders</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="groups_id" eval="[(4, ref('maqabim_extended_security.group_purchase_restricted_user'))]"/>
            <field name="domain_force">[('picking_type_id.warehouse_id', 'in', user.warehouse_ids.ids)]</field>
        </record>
    </data>
</odoo> 