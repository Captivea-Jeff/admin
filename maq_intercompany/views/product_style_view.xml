<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Product Style Form view -->
        <record id="view_maq_product_style_form" model="ir.ui.view">
            <field name="name">view.maq.product.style.form</field>
            <field name="model">product.style</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="html_class"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Product Style Tree view -->
        <record id="view_maq_product_style_tree" model="ir.ui.view">
            <field name="name">view.maq.product.style.tree</field>
            <field name="model">product.style</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="html_class"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>
        <!-- Product Style Action -->
        <record id="action_product_style" model="ir.actions.act_window">
            <field name="name">Product Style</field>
            <field name="res_model">product.style</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="tree_view_id" ref="maq_intercompany.view_maq_product_style_tree"/>
        </record>
        <!-- Product Style Menu -->
        <menuitem id="menu_product_style" action="maq_intercompany.action_product_style"
            parent="sale.prod_config_main" sequence="10"/>
    </data>
</odoo>