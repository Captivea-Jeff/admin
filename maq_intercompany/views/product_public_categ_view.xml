<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Added the company field in ecommerce category view for multicompany scenario  -->
        <record id="product_public_company_form_view" model="ir.ui.view">
            <field name="name">product_public_company_form_view</field>
            <field name="model">product.public.category</field>
            <field name="inherit_id" ref="website_sale.product_public_category_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//group/field[last()]" position="after">
                    <field name="m_company_id" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>