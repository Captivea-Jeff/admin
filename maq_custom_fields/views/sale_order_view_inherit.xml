<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit sale order form view to set cost price field in sale order line -->
        <record id="view_sale_order_order_line_tree_inherit" model="ir.ui.view">
            <field name="name">view.sale.order.order.line.tree.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom']" position="after">
                    <field name="m_cost_price" groups="base.group_user"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

