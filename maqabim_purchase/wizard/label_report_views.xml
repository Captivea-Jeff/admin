<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_label_report_wizard" model="ir.ui.view">
        <field name="name">label.report.wizard.form</field>
        <field name="model">label.report.wizard</field>
        <field name="arch" type="xml">
        <form string="Label Report">
            <group string="Select Report Formats">
                <field name="formats" widget="radio"/>
                <field name="label_type" invisible="1"/>
            </group>
            <groups string="Products" attrs="{'invisible': [('label_type', '!=', 'product')]}">
                <field name="product_label_ids" nolabel="1">
                    <tree editable="top" create="0" delete="0">
                        <field name="product_id" readonly="True" force_save="1"/>
                        <field name="print_qty"/>
                    </tree>
                </field>
            </groups>
            <footer>
                <button name="print_report" string="Print" type="object" class="btn-primary"/>
                <button string="Cancel" special="cancel" class="btn-default"/>
            </footer>
        </form>
        </field>
    </record>

    <record id="action_purchase_label_report" model="ir.actions.act_window">
        <field name="name">Print PO-labels</field>
        <field name="res_model">label.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_label_type': 'purchase'}</field>
        <field name="binding_model_id" ref="purchase.model_purchase_order"/>
        <field name="binding_view_types">form</field>
        <field name="target">new</field>
    </record>

    <record id="action_sale_label_report" model="ir.actions.act_window">
        <field name="name">Print SO-labels</field>
        <field name="res_model">label.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_label_type': 'sale'}</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_view_types">form</field>
        <field name="target">new</field>
    </record>

    <record id="action_picking_label_report" model="ir.actions.act_window">
        <field name="name">Print Picking Labels</field>
        <field name="res_model">label.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_label_type': 'picking'}</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_view_types">form</field>
        <field name="target">new</field>
    </record>

    <record id="action_product_label_report" model="ir.actions.act_window">
        <field name="name">Print Product Labels</field>
        <field name="res_model">label.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_label_type': 'product'}</field>
        <field name="binding_model_id" ref="sale.model_product_product"/>
        <field name="binding_view_types">form</field>
        <field name="target">new</field>
    </record>
</odoo>
