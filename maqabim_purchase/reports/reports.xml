<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="paperformat_a4_label" model="report.paperformat">
            <field name="name">A4 Label Report</field>
            <field name="default" eval="False" />
            <field name="format">custom</field>
            <field name="page_width">216</field>
            <field name="page_height">279</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">14</field>
            <field name="margin_bottom">8</field>
            <field name="margin_left">3</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">8</field>
            <field name="dpi">78</field>
        </record>

        <report
            id="report_po_label"
            string="Print PO Labels"
            model="purchase.order"
            report_type="qweb-pdf"
            name="maqabim_purchase.report_polabel"
            file="maqabim_purchase.report_polabel"
            print_report_name="'PO Labels - %s' % (object.name)"
            paperformat="paperformat_a4_label"
            menu="False"
        />
        <report
            id="report_so_label"
            string="Print SO Labels"
            model="sale.order"
            report_type="qweb-pdf"
            name="maqabim_purchase.report_solabel"
            file="maqabim_purchase.report_solabel"
            print_report_name="'SO Labels - %s' % (object.name)"
            paperformat="paperformat_a4_label"
            menu="False"
        />
        <report
            id="report_picking_label"
            string="Print Picking Labels"
            model="stock.picking"
            report_type="qweb-pdf"
            name="maqabim_purchase.report_pickinglabel"
            file="maqabim_purchase.report_pickinglabel"
            print_report_name="'Picking Labels - %s' % (object.name)"
            paperformat="paperformat_a4_label"
            menu="False"
        />
        <report
            id="report_product_label"
            string="Print Product Labels"
            model="product.product"
            report_type="qweb-pdf"
            name="maqabim_purchase.report_productlabel"
            file="maqabim_purchase.report_productlabel"
            print_report_name="'Product Labels - %s' % (object.name)"
            paperformat="paperformat_a4_label"
            menu="False"
        />

</odoo>
