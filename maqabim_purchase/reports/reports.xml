<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_a4_label" model="report.paperformat">
        <field name="name">A4 Label Report</field>
        <field name="default" eval="False" />
        <field name="format">custom</field>
        <field name="page_width">216</field>
        <field name="page_height">279</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">12</field>
        <field name="margin_bottom">12</field>
        <field name="margin_left">3</field>
        <field name="margin_right">0</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">0</field>
        <field name="dpi">78</field>
    </record>

    <record id="report_po_label" model="ir.actions.report">
        <field name="name">Print PO-labels</field>
        <field name="model">purchase.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">maqabim_purchase.report_polabel</field>
        <field name="report_file">maqabim_purchase.report_polabel</field>
        <field name="print_report_name">'PO Labels - %s' % (object.name)</field>
        <field name="paperformat_id" ref="paperformat_a4_label"></field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
    </record>

    <record id="report_so_label" model="ir.actions.report">
        <field name="name">Print SO Labels</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">maqabim_purchase.report_solabel</field>
        <field name="report_file">maqabim_purchase.report_solabel</field>
        <field name="print_report_name">'SO Labels - %s' % (object.name)</field>
        <field name="paperformat_id" ref="paperformat_a4_label"></field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
    </record>

    <record id="report_picking_label" model="ir.actions.report">
        <field name="name">Print Picking Labels</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">maqabim_purchase.report_pickinglabel</field>
        <field name="report_file">maqabim_purchase.report_pickinglabel</field>
        <field name="print_report_name">'Picking Labels - %s' % (object.name)</field>
        <field name="paperformat_id" ref="paperformat_a4_label"></field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
    </record>

    <record id="report_product_label" model="ir.actions.report">
        <field name="name">Print Product Labels</field>
        <field name="model">product.product</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">maqabim_purchase.report_productlabel</field>
        <field name="report_file">maqabim_purchase.report_productlabel</field>
        <field name="print_report_name">'Product Labels - %s' % (object.name)</field>
        <field name="paperformat_id" ref="paperformat_a4_label"></field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
