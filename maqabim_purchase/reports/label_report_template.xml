<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="label_report_format1_version1">
        <div style="width: 24%; padding:0; display: inline-table;">
            <table style="border-spacing:0;margin-bottom:0.003in;width: 1.75in; height:0.42in;font-size:12px;">
                <tbody>
                    <tr>
                        <td width="70%" style="text-align: center; vertical-align: middle; margin-top: 2px;">
                            <div style="line-height: 90%">
                                <span t-field="product.default_code"/>
                            </div>
                            <div style="line-height: 98%;font-size:11px;">
                                <span t-field="product.lst_price" t-options='{"widget": "monetary", "display_currency": product.currency_id}'/>
                            </div>
                            <div>
                                <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', product.barcode, 600, 150)" style="width:100%;height:9.9%;"/>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>

    <template id="label_report_format1_version2">
        <div style="width: 24%; padding:0; display: inline-table;">
            <table style="border-spacing:0;margin-bottom:0.010in;width: 1.75in; height:0.42in;font-size:13px;">
                <tbody>
                    <tr>
                        <td width="70%" style="text-align: center; vertical-align: middle;">
                            <div style="line-height: 0.9em;">
                                <span t-field="product.default_code"/>
                            </div>
                            <div>
                                <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', product.barcode, 600, 150)" style="width:100%;height:10%;"/>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>

    <template id="label_report_format2_version1">
        <div style="width: 49%; padding:0; display: inline-table;">
            <table style="border-spacing:0;margin-bottom:0.28in;width: 4in; height:1.63in;font-size:23px;">
                <tbody>
                    <tr>
                        <td width="70%" style="text-align: center; vertical-align: middle;">
                            <div class="mt-3">
                                <span t-field="product.default_code"/>
                            </div>
                            <div class="mt-3">
                                <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', product.barcode, 600, 150)" style="width:100%;height:25%;"/>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>

    <template id="label_report_format2_version2">
        <div style="width: 49%; padding:0; display: inline-table;">
            <table style="border-spacing:0;margin-bottom:0.28in;width: 4in; height:1.63in;font-size:18.5px;">
                <tbody>
                    <tr>
                        <td width="70%" style="text-align: center; vertical-align: middle;">
                            <div class="mt-3">
                                <span t-field="product.display_name"/>
                            </div>
                            <div class="mt-1">
                                <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', product.barcode, 600, 150)" style="width:100%;height:25%;"/>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>

    <template id="label_report">
        <t t-if="report_format == 'f1_v1'">
            <t t-call="maqabim_purchase.label_report_format1_version1"/>
        </t>
        <t t-if="report_format == 'f1_v2'">
            <t t-call="maqabim_purchase.label_report_format1_version2"/>
        </t>
        <t t-if="report_format == 'f2_v1'">
            <t t-call="maqabim_purchase.label_report_format2_version1"/>
        </t>
        <t t-if="report_format == 'f2_v2'">
            <t t-call="maqabim_purchase.label_report_format2_version2"/>
        </t>
    </template>
</odoo>