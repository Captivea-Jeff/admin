<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Variant on Website False -->
        <record id="variant_on_website_false_view" model="ir.ui.view">
            <field name="name">Variant Hide</field>
            <field name="model">variant.website.false</field>
            <field name="arch" type="xml">
                <form string="Variant False">
                    <span>Do you want to hide the selected products on website?</span>
                    <footer>
                        <button string="Hide" name="change_variant_false" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action to add the Menu on the Action Menu List which appears on Selection of single or multiple product variants -->
        <act_window id="variant_false_wizard_action"
            name="Variant Hide"
            src_model="product.product"
            res_model="variant.website.false"
            view_type="form" view_mode="form"
            key2="client_action_multi" target="new"
            groups="base.group_erp_manager"/>

    </data>
</odoo>

