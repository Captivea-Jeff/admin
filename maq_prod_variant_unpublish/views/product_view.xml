<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Add field is_website_publish in product.product form view -->
        <record id="product_product_view_inherit" model="ir.ui.view">
            <field name="name">product.product.view.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form//sheet//div[@name='options']" position="inside">
                    <span class="d-inline-block">
                        <field name="is_website_publish"/>
                        <label for="is_website_publish"/>
                    </span>
                    <div>
                        <!-- <field name="website_ids" widget="many2many_tags" attrs="{'invisible': [('is_website_publish','=', False)]}"/> -->
                    </div>
                    <span class="d-inline-block">
                        <field name="is_hide_variant"/>
                        <label for="is_hide_variant"/>
                    </span>
                    <div>
                        <!-- <field name="product_hide_website_ids" widget="many2many_tags" attrs="{'invisible': [('is_hide_variant','=', False)]}"/> -->
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
