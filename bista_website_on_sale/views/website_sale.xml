<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="bista_products_categories" inherit_id="bista_website_back_stock.bista_products_backinstock" name="Product Categories">
            <xpath expr="//div[@id='back_in_stock']" position="after">
                <br/>
                <div t-att-data-link-href="keep('/sale', category=0)" class="custom-control custom-radio mb-1 d-inline-block" id="sale_product">
                    <input type="radio" style="pointer-events:none;" class="custom-control-input" t-att-id="sale_product" t-att-value="sale_product" t-att-checked="'true' if not category and url == '/sale' else None"/>
                    <label class="custom-control-label font-weight-normal" t-att-for="sale_product">Sale</label>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
