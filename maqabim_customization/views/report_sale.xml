<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_saleorder_document_maqabim" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[hasclass('page')]/table/thead/tr" position="replace">
            <tr>
                <th>Description</th>
                <th class="text-right">Ordered</th>
                <th class="text-right">Delivered</th>
                <th class="text-right">Invoiced</th>
                <th class="text-right">Unit Price</th>
                <th t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">Disc.(%)</th>
                <th class="text-right">Taxes</th>
                <th name="th_subtotal" class="text-right">
                    <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                    <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                </th>
            </tr>
        </xpath>
        <xpath expr="//span[@t-field='line.product_uom_qty']/.." position="after">
            <td class="text-right">
                <span t-field="line.qty_delivered"/>
                <span t-field="line.product_uom" groups="uom.group_uom"/>
            </td>
            <td class="text-right" style="background:red;">
                <span t-field="line.qty_invoiced"/>
                <span t-field="line.product_uom" groups="uom.group_uom"/>
            </td>
        </xpath>
    </template>
</odoo>
