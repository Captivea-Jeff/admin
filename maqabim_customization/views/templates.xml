<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="frontend_layout_maqabim" inherit_id="portal.frontend_layout">
        <xpath expr="//div[hasclass('navbar-static-top')]" position="attributes">
            <attribute name="class">navbar navbar-default navbar-fixed-top</attribute>
        </xpath>
    </template>

    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="." position="inside">
            <link type="text/css" rel='stylesheet' href='/maqabim_customization/static/src/css/website.css'/>
            <script type="text/javascript" src="/maqabim_customization/static/src/js/website.js"></script>
        </xpath>
    </template>

</odoo>
