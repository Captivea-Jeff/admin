<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_a4_label_maq" model="report.paperformat">
        <field name="name">Custom A4 Label Report</field>
        <field name="default" eval="False" />
        <field name="format">custom</field>
        <field name="page_width">216</field>
        <field name="page_height">279</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">12</field>
        <field name="margin_bottom">12</field>
        <field name="margin_left">3</field>
        <field name="margin_right">0</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">0</field>
        <field name="dpi">78</field>
    </record>

    <report
        id="report_production_lot_label"
        string="Print Custom LOT Labels"
        model="stock.production.lot"
        report_type="qweb-pdf"
        name="maq_lot_label_report.report_productionlotlabel"
        file="maq_lot_label_report.report_productionlotlabel"
        print_report_name="'Production Lot Labels - %s' % (object.name)"
        paperformat="paperformat_a4_label_maq"
        menu="False"
    />
    <report
        id="report_product_label"
        string="Print Custom LOT Labels"
        model="product.product"
        report_type="qweb-pdf"
        name="maq_lot_label_report.report_productlabel"
        file="maq_lot_label_report.report_productlabel"
        print_report_name="'Product Labels - %s' % (object.name)"
        paperformat="paperformat_a4_label_maq"
        menu="False"
    />
</odoo>
