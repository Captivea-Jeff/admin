<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="label_report_form1_vers1">
        <div class="col-xs-3" style="padding:0;">
            <table style="border-spacing:0;margin-bottom:0.011in;width: 1.75in; height:0.50in;font-size:12px;">
                <tbody>
                    <tr>
                        <td width="70%" style="text-align: center; vertical-align: middle;">
                            <div style="line-height: 90%">
                                <span t-field="product.govt_sku"/> - <span t-field="product.default_code"/>
                            </div>
                            <div style="line-height: 98%;font-size:11px; margin-bottom: 1px;">
                                <span t-field="lot_id.name"/>
                            </div>
                            <div>
                                <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', lot_id.name, 600, 150)" style="width:100%;height:10%;"/>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>

    <template id="label_report_form2_vers1">
        <div class="col-xs-6" style="padding:0;">
            <table style="border-spacing:0;margin-bottom:0.281in;width: 4in; height:1.75in;font-size:21px;">
                <tbody>
                    <tr>
                        <td width="70%" style="text-align: center; vertical-align: middle;">
                            <div class="mt1">
                                [<span t-field="product.default_code"/>] <span t-field="product.name"/> (<span t-field="product.attribute_value_ids.name"/>)
                            </div>
                            <div class="mt1">
                                <span t-field="product.govt_sku"/>
                            </div>
                            <div class="mt1">
                                <span t-field="lot_id.name"/>
                            </div>
                            <div class="mt1">
                                <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', lot_id.name, 600, 150)" style="width:100%;height:25%;"/>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>

    <template id="label_lot_report">
        <t t-if="report_format == 'f1v1'">
            <t t-call="maq_lot_label_report.label_report_form1_vers1"/>
        </t>
        <t t-if="report_format == 'f2v1'">
            <t t-call="maq_lot_label_report.label_report_form2_vers1"/>
        </t>
    </template>
</odoo>
