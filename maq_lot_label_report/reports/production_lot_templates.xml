<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_productionlotlabel">
        <t t-call="web.html_container">
        <t t-call="web.basic_layout">
        <t t-set="count" t-value="0" />
            <div class="page">
                <t t-foreach="docs" t-as="doc">
                    <t t-foreach="list(range(lotid_by_product.get(str(doc.id), 0)))" t-as="n">
                        <t t-if="report_format == 'f1v1'">
                            <div t-if="count % 80 == 0" style="page-break-after:always;"/>
                            <div style="width: 20%; float: left; height: 47px; margin: 0px 10px;">
                                <t t-call="maq_lot_label_report.label_report_form1_vers1">
                                    <t t-set="product" t-value="doc.product_id"/>
                                    <t t-set="lot_id" t-value="doc"/>
                                </t>
                            </div>
                            <t t-set="count" t-value="count+1" />
                        </t>
                        <t t-if="report_format == 'f2v1'">
                            <div t-if="count % 10 == 0" style="page-break-after:always;"/>
                            <div style="width : 47%; float: left; height: 180px;">
                                <t t-call="maq_lot_label_report.label_report_form2_vers1">
                                    <t t-set="product" t-value="doc.product_id"/>
                                    <t t-set="lot_id" t-value="doc"/>
                                </t>
                            </div>
                            <t t-set="count" t-value="count+1" />
                        </t>
                    </t>
                </t>
            </div>
        </t>
        </t>
    </template>
</odoo>
