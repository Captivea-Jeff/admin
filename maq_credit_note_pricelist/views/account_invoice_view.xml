<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_account_invoice_customer_form" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="m_pricelist_id" attrs="{'invisible': [('type','!=','out_refund')]}"/>
                <button type="object"
                        name="button_update_prices_from_pricelist"
                        string="Update prices"
                        attrs="{'invisible': ['|', ('m_pricelist_id', '=', False), ('state', 'not in', ['draft']), '&amp;', ('type','!=','out_refund')]}"
                        help="Update price in lines from the pricelist"
                />
            </field>
        </field>
    </record>

</odoo>

