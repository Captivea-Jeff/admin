<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">view.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@id='header_right_group']" position="inside">
                <field name="m_pricelist_id" attrs="{'invisible': [('move_type','!=','out_refund')]}"/>
                <button type="object"
                        name="button_update_prices_from_pricelist"
                        string="Update prices"
                        attrs="{'invisible': ['|', ('m_pricelist_id', '=', False), ('state', 'not in', ['draft']), '&amp;', ('move_type','!=','out_refund')]}"
                        help="Update price in lines from the pricelist"/>
            </xpath>
        </field>
    </record>

</odoo>

