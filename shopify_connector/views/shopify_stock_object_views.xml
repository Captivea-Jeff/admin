<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="maq_shopify_stock_location_inherit_form" model="ir.ui.view">
            <field name="name">maq.shopify.stock.location.inherit.form</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/group" position="inside">
                    <group string="Shopify">
                        <field name="shopify_location_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                    </group>
                </xpath>
            </field>
        </record>
