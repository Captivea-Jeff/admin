        <record id="maq_shopify_stock_move_line_inherit_form" model="ir.ui.view">
            <field name="name">maq.shopify.stock.move.line.inherit.form</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group" position="inside">
                    <group string="Shopify">
                        <field name="shopify_error_log"/>
                        <field name="shopify_export"/>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="maq_shopify_stock_picking_inherit_form" model="ir.ui.view">
            <field name="name">maq.shopify.stock.picking.inherit.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook" position="inside">
                    <page string="Shopify">
                        <group>
                            <field name="shopify_fulfillment_id"/>
                            <field name="shopify_order_id"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
