<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_shopify_metafields_form" model='ir.ui.view'>
            <field name="name">view.shopify.metafields.form</field>
            <field name="model">shopify.metafields</field>
            <field name="arch" type="xml">
                <form name="shopify_metafields">
                    <sheet>
                        <group>
                            <group>
                                <field name="key"/>
                                <field name="value"/>
                            </group>
                            <group>
                                <field name="value_type"/>
                                <field name="namespace"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_shopify_metafields_tree" model="ir.ui.view">
            <field name="name">view.shopify.metafields.tree</field>
            <field name="model">shopify.metafields</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="key"/>
                    <field name="value"/>
                    <field name="value_type"/>
                    <field name="namespace"/>
                </tree>
            </field>
        </record>

        <record id="view_shopify_metafields_search" model="ir.ui.view">
            <field name="name">view.shopify.metafields.search</field>
            <field name="model">shopify.metafields</field>
            <field name="arch" type="xml">
                <search>
                    <field name="key"/>
                    <field name="value"/>
                    <field name="value_type"/>
                    <field name="namespace"/>
                </search>
            </field>
        </record>

        <record id="action_shopify_metafields" model="ir.actions.act_window">
            <field name="name">Shopify Metafields</field>
            <field name="res_model">shopify.metafields</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="shopify_connector.view_shopify_metafields_search"/>
        </record>
    </data>
</odoo>
