<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="maq_shopify_res_company_inherit_form" model="ir.ui.view">
            <field name="name">maq.shopify.res.company.inherit.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook" position="inside">
                    <page name="maq_shopify_company" string="Shopify">
                        <group>
                            <group>
                                <field name="shopify_vendor_id"/>
                                <field name="shopify_customer_id"/>
                                <field name="shopify_user_id"/>
                                <field name="shopify_intercompany_customer_id"/>
                            </group>
                            <group>
                                <field name="shopify_warehouse_id"/>
                                <field name="shopify_location_id"/>
                                <field name="shopify_province_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
