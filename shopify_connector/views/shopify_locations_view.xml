<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_shopify_locations_form" model='ir.ui.view'>
            <field name="name">view.shopify.locations.form</field>
            <field name="model">shopify.locations</field>
            <field name="arch" type="xml">
                <form name="shopify_locations">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-check">
                                <field name="active" widget="boolean_button" options='{"terminology": "active"}'/>
                            </button>
                        </div>
                        <h1><field name="name" placeholder="Location Name"/></h1>
                        <group>
                            <group>
                                    <field name="shopify_config_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            </group>
                            <group>
                                <field name="shopify_location_id"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="address1"/>
                                <field name="address2"/>
                                <field name="city"/>
                                <field name="zip"/>
                                <field name="province"/>
                                <!-- <field name="country"/> -->
                                <field name="phone"/>
                            </group>
                            <group>
                                <field name="created_at_shopify"/>
                                <field name="updated_at_shopify"/>
                                <field name="country_code"/>
                                <field name="country_name"/>
                                <field name="province_code"/>
                                <field name="legacy"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_shopify_locations_tree" model="ir.ui.view">
            <field name="name">view.shopify.locations.tree</field>
            <field name="model">shopify.locations</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="shopify_config_id"/>
                    <field name="shopify_location_id"/>
                </tree>
            </field>
        </record>

        <record id="view_shopify_locations_search" model="ir.ui.view">
            <field name="name">view.shopify.locations.search</field>
            <field name="model">shopify.locations</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <filter string="Active" name="active_filter" domain="[('active','=',True)]"/>
                </search>
            </field>
        </record>

        <record id="action_shopify_locations" model="ir.actions.act_window">
            <field name="name">Shopify Locations</field>
            <field name="res_model">shopify.locations</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="shopify_connector.view_shopify_locations_search"/>
        </record>
    </data>
</odoo>