<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_shopify_images_form" model='ir.ui.view'>
            <field name="name">view.shopify.images.form</field>
            <field name="model">shopify.images</field>
            <field name="arch" type="xml">
                <form name="shopify_images">
                    <sheet>
                        <group>
                            <group>
                                <field name="type"/>
                                <field name="binary" attrs="{'invisible':['|',('type','=','url'),('type','=',False)]}"/>
                                <field name="src"  attrs="{'invisible':['|',('type','=','binary'),('type','=',False)]}"/>
                            </group>
                            <group>
                                <field name="filename"/>
                                <field name="shopify_image_id"/>
                                <field name="shopify_config_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_shopify_images_tree" model="ir.ui.view">
            <field name="name">view.shopify.images.tree</field>
            <field name="model">shopify.images</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="type"/>
                    <field name="shopify_image_id"/>
                    <field name="filename"/>
                </tree>
            </field>
        </record>

        <record id="view_shopify_images_search" model="ir.ui.view">
            <field name="name">view.shopify.images.search</field>
            <field name="model">shopify.images</field>
            <field name="arch" type="xml">
                <search>
                    <field name="type" />
                    <field name="filename" />
                </search>
            </field>
        </record>

        <record id="action_shopify_images" model="ir.actions.act_window">
            <field name="name">Shopify Images</field>
            <field name="res_model">shopify.images</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="shopify_connector.view_shopify_images_search"/>
        </record>
    </data>
</odoo>