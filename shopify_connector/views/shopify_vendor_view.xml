<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_shopify_vendor_form" model='ir.ui.view'>
            <field name="name">view.shopify.vendor.form</field>
            <field name="model">shopify.vendor</field>
            <field name="arch" type="xml">
                <form name="shopify_vendor">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="shopify_config_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_shopify_vendor_tree" model="ir.ui.view">
            <field name="name">view.shopify.vendor.tree</field>
            <field name="model">shopify.vendor</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="shopify_config_id"/>
                </tree>
            </field>
        </record>

        <record id="view_shopify_vendor_search" model="ir.ui.view">
            <field name="name">view.shopify.vendor.search</field>
            <field name="model">shopify.vendor</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <group expand="1" string="Group By">
                        <filter string="Shopify Config." name="shopify_config" context="{'group_by':'shopify_config_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_shopify_vendor" model="ir.actions.act_window">
            <field name="name">Shopify Vendor</field>
            <field name="res_model">shopify.vendor</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="shopify_connector.view_shopify_vendor_search"/>
        </record>
    </data>
</odoo>