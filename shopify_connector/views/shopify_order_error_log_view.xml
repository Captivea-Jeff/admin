<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_shopify_order_error_log_form" model='ir.ui.view'>
            <field name="name">view.shopify.order.error.log.form</field>
            <field name="model">shopify.order.error.log</field>
            <field name="arch" type="xml">
                <form name="shopify_order_error_log" create="false" edit="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="shopify_so_id"/>
                                <field name="odoo_so_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                <field name="error"/>
                            </group>
                            <group>
                                <field name="company_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                <field name="date"/>
                                <field name="shopify_config_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_shopify_order_error_log_tree" model="ir.ui.view">
            <field name="name">view.shopify.order.error.log.tree</field>
            <field name="model">shopify.order.error.log</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false">
                    <field name="shopify_so_id"/>
                    <field name="odoo_so_id"/>
                    <field name="company_id"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>

        <record id="view_shopify_order_error_log_search" model="ir.ui.view">
            <field name="name">view.shopify.order.error.log.search</field>
            <field name="model">shopify.order.error.log</field>
            <field name="arch" type="xml">
                <search>
                    <field name="shopify_so_id"/>
                    <field name="odoo_so_id"/>
                    <field name="company_id"/>
                    <field name="date"/>
                    <field name="shopify_config_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Company" context="{'group_by': 'company_id'}"/>
                        <filter string="Shopify Config" context="{'group_by': 'shopify_config_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_shopify_order_error_log" model="ir.actions.act_window">
            <field name="name">Shopify Order Error Log</field>
            <field name="res_model">shopify.order.error.log</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="shopify_connector.view_shopify_order_error_log_search"/>
        </record>
    </data>
</odoo>