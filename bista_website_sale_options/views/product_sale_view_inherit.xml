        <record id="product_template_form_view_sale_order_line_button" model="ir.ui.view">
            <field name="name">product.template.sale.order.line.button</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='toggle_active']" position="after">
                    <button class="oe_stat_button" name="action_product_sale_list"
                            type="object" icon="fa-usd" groups="sales_team.group_sale_salesman">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="sales_count" widget="statinfo" nolabel="1" class="mr4"/>
                            </span>
                            <span class="o_stat_text">Sales</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>

