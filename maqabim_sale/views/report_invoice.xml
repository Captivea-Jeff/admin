<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_invoice_document_inherit_maqabim_sale" inherit_id="account.report_invoice_document">
        <xpath expr="//table[@name='invoice_line_table']/thead/tr" position="replace">
            <tr>
                <th>Description</th>
                <!-- <th class="hidden">Source Document</th> -->
                <th class="text-right">Ordered Qty</th>
                <th class="text-right">Backorder Qty</th>
                <th class="text-right">Invoiced Qty</th>
                <th class="text-right">Unit Price</th>
                <th t-if="display_discount" class="text-right">Disc.(%)</th>
                <th class="text-right">Taxes</th>
                <th class="text-right">Amount</th>
            </tr>
        </xpath>
        <xpath expr="//span[@t-field='line.quantity']/.." position="before">
            <td class="text-right">
                <span t-field="line.ordered_qty"/>
                <span t-field="line.uom_id" groups="uom.group_uom"/>
            </td>
            <td class="text-right">
                <span t-field="line.back_order_qty"/>
                <span t-field="line.uom_id" groups="uom.group_uom"/>
            </td>
        </xpath>
    </template>
