<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="report_invoice_document_inherit_maqabim_sale" inherit_id="account.report_invoice_document">
	    <xpath expr="//table[@name='invoice_line_table']/thead/tr" position="replace">
			<tr>
                <th>Description</th>
                <th class="hidden">Source Document</th>
                <th class="text-right">Ordered Quantity</th>
                <th class="text-right">Invoiced Quantity</th>
                <th class="text-right">Unit Price</th>
                <th t-if="display_discount" class="text-right">Disc.(%)</th>
                <th class="text-right">Taxes</th>
                <th class="text-right">Amount</th>
            </tr>
		</xpath>
		<xpath expr="//span[@t-field='l.quantity']/.." position="before">
			<td class="text-right">
                <span t-field="l.ordered_qty"/>
                <span t-field="l.uom_id"  groups="product.group_uom"/>
            </td>
		</xpath>
		<xpath expr="//tr[@t-foreach='range(max(5-len(o.invoice_line_ids),0))']//td[2]" position="before">
			<td>
			</td>
		</xpath> 
	</template>
</odoo>