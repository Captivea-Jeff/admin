<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="portal_invoice_report_inherit_maqabim_sale" inherit_id="account.portal_invoice_report">
		<xpath expr="//table/thead/tr/th[2]" position="before">
			<th class="text-right">Ordered Quantity</th>
		</xpath>
		<xpath expr="//tr[@t-foreach='invoice.invoice_line_ids']//span[@t-field='l.quantity']/.." position="before">
			<td class="text-right">
                <span t-field="l.ordered_qty"/>
                <span t-field="l.uom_id"  groups="product.group_uom"/>
            </td>
		</xpath>
	</template>
</odoo>