<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Added box number field in delivery slip report for stock move and stock move lines tables-->
    <template id="report_deliveryslipinherit" inherit_id='stock.report_delivery_document'>
        <xpath expr="//div[hasclass('page')]/table[1]/thead/tr" position="inside">
            <th>
                <strong>Box Number</strong>
            </th>
        </xpath>
        <xpath expr="//div[hasclass('page')]/table[1]/tbody/tr" position="inside">
            <td>
                <span t-field="move.m_box_number"/>
            </td>
        </xpath>
        <xpath expr="//table[@name='stock_move_line_table']//thead//tr" position="inside">
            <th>
                <strong>Box Number</strong>
            </th>
        </xpath>
    </template>
    <template id="stock_report_delivery_has_serial_move_line_inherit" inherit_id="stock.stock_report_delivery_has_serial_move_line">
        <xpath expr="//td[@name='move_line_lot_qty_done']" position="after">
            <td>
                <span t-esc="move_line.move_id.m_box_number"/>
            </td>
        </xpath>
    </template>
    <template id="stock_report_delivery_aggregated_move_lines_inherit" inherit_id="stock.stock_report_delivery_aggregated_move_lines">
        <xpath expr="//td[@name='move_line_aggregated_qty_done']" position="after">
            <td class="text-left" name="move_line_aggregated_qm_box_number">
                <span t-esc="aggregated_lines[line]['m_box_number']"/>
            </td>
        </xpath>
    </template>
</odoo>
