<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="OrderWeightWidget" owl="1">
        <div class="oe_status">
            <span t-attf-class="purchase-limit-text product_weight {{ordered_cannabis &gt; purchase_weight_limit ? 'text-red' : 'text-green'}}">
                <t t-esc="ordered_cannabis"/>
            </span>
            (of
            <span class="purchase-limit-text">
                <t t-esc="purchase_weight_limit"/>
                <sub> gm</sub>
            </span>)
        </div>
    </t>

    <t t-name="Chrome" t-inherit="point_of_sale.Chrome" t-inherit-mode="extension" owl="1">
        <xpath expr="//CashierName" position="before">
            <OrderWeightWidget />
        </xpath>
    </t>
</templates>
