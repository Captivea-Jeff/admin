<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_inherit_website_multi" model="ir.ui.view">
            <field name="name">maq.res.config.settings.view.form.inherit.website</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="website.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//div[@id='cdn_setting']" position="after">
                        <div class="col-xs-12 col-md-6 o_setting_box" id="force_shop_login" title="Requires registration to shop.">
                            <div class="o_setting_left_pane">
                                <field name="website_shop_login" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="website_shop_login" string="Requires registration to shop."/>
                                <div class="text-muted">
                                    Redircts user to the below configure registration page to approve them to shop
                                </div>
                                <div class="content-group" attrs="{'invisible': [('website_shop_login', '=', False)]}">
                                    <div class="row mt16">
                                        <label class="col-md-3 o_light_label" for="website_shop_login_redirect"/>
                                        <field name="website_shop_login_redirect" attrs="{'required': [('website_shop_login', '=', True)]}" placeholder="/registration" t-translation="off"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>
