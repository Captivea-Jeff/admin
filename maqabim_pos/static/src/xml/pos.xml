    <t t-name="OrderWidget" t-inherit="point_of_sale.OrderWidget" t-inherit-mode="extension" owl="1">
        <xpath expr="//OrderSummary" position="replace">
            <OrderSummary total="state.total" tax="state.tax" subtotal="state.subtotal"/>
        </xpath>
    </t>

    <t t-name="OrderSummary" t-inherit="point_of_sale.OrderSummary" t-inherit-mode="extension"
       owl="1">
        <xpath expr="//div[hasclass('entry', 'total')]" position="replace">
                <div class="entry total">
                    <span class="badge">Subtotal: </span>

                        <t t-esc="props.subtotal" />

                    <div t-if="props.tax" class="subentry">
                        Taxes:
                        <span class="value">
                            <t t-esc="props.tax" />
                        </span>
                    </div>
                    <span class="badge">Total: </span>
                    <span class="value">
                        <t t-esc="props.total" />
                    </span>
                </div>
        </xpath>

    </t>

