    <!--Display default code on Cart line-->
    <t t-name="Orderline" t-inherit="point_of_sale.Orderline" t-inherit-mode="extension" owl="1">
        <xpath expr="//span[hasclass('product-name')]/t[1]" position="before">
            <span><t t-if="props.line.get_product().default_code">[<t t-esc="props.line.get_product().default_code"/>]</t></span>
        </xpath>
    </t>

    <!--Hide  TAX Action button-->
