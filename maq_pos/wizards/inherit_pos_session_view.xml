<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_view_pos_session_form" model="ir.ui.view">
        <field name="name">inherit.pos.session.form.view</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='statement_ids']" position="after">
                <separator string="Summary by Put Money In" attrs="{'invisible' : ['|',('cash_control', '=', False),('state', '=', 'opening_control')]}"/>
                <field name="m_cashbox_in_ids" attrs="{'invisible' : ['|',('cash_control', '=', False),('state', '=', 'opening_control')]}">
                    <tree create="1" edit="1" delete="1">
                        <field name="ref"/>
                        <field name="create_date" string="Date"/>
                        <field name="put_money_in" sum="Total" groups="maq_pos.group_pos_access_manager"/>
                    </tree>
                    <form create="1" edit="1" delete="1">
                        <group>
                            <group>
                                <field name="ref"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <group>
                            <field name="cashbox_lines_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="coin_value"/>
                                    <field name="number"/>
                                    <field name="subtotal" sum="Total" groups="maq_pos.group_pos_access_manager"/>
                                </tree>
                            </field>
                        </group>
                    </form>
                </field>


                <separator string="Summary by Take Money Out" attrs="{'invisible' : ['|',('cash_control', '=', False),('state', '=', 'opening_control')]}"/>
                <field name="m_cashbox_out_ids" attrs="{'invisible' : ['|',('cash_control', '=', False),('state', '=', 'opening_control')]}">
                    <tree create="1" edit="1" delete="1">
                        <field name="ref"/>
                        <field name="create_date" string="Date"/>
                        <field name="put_money_out" sum="Total" groups="maq_pos.group_pos_access_manager"/>
                    </tree>
                    <form create="1" edit="1" delete="1">
                        <group>
                            <group>
                                <field name="ref"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <group>
                            <field name="cashbox_lines_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="coin_value"/>
                                    <field name="number"/>
                                    <field name="subtotal" sum="Total" groups="maq_pos.group_pos_access_manager"/>
                                </tree>
                            </field>
                        </group>
                    </form>
                </field>
            </xpath>
        </field>
    </record>
</odoo>

